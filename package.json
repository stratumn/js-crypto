{
  "name": "@stratumn/js-crypto",
  "version": "1.5.0",
  "description": "Browser compatible crypto",
  "main": "lib/index.js",
  "files": [
    "/lib"
  ],
  "scripts": {
    "test": "jest --watch",
    "test:ci": "jest",
    "build": "babel src --out-dir lib --ignore **/*.test.js",
    "lint": "eslint src/",
    "lint:fix": "eslint --fix src/",
    "release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stratumn/js-crypto.git"
  },
  "author": "Stratumn Team",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/stratumn/js-crypto/issues"
  },
  "homepage": "https://github.com/stratumn/js-crypto#readme",
  "dependencies": {
    "node-forge": "^0.8.5"
  },
  "devDependencies": {
    "@semantic-release/git": "^7.0.7",
    "@stratumn/eslint-config": "^0.0.13",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "conventional-changelog-eslint": "^3.0.1",
    "eslint": "^5.8.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^1.3.1",
    "jest": "^23.4.2",
    "rimraf": "^2.6.2",
    "semantic-release": "^15.13.2",
    "validate-commit": "^3.4.0"
  },
  "jest": {
    "testURL": "http://localhost"
  },
  "release": {
    "branch": "master",
    "preset": "eslint",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json"
          ],
          "message": "${nextRelease.version}"
        }
      ],
      "@semantic-release/github"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "validate-commit-msg -p eslint"
    }
  }
}
